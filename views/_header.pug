header.header
 nav.nav.nav--tours
  a.nav__el(href='/') All Tours
  form.nav__search
   button.nav_search_btn
    svg:use(xlink:href='/img/icons.svg#icon-search')
   input.nav__search-input(type='text' placeholder='Search Tours')
 div.header__logo
  img(src='/img/logo-white.png' alt='Natours logo')
 nav.nav.nav--user
    if user
      a.nav__el(href='#') My Bookings
       a.nav__el.nav__el--logout(href='#') Log out
      a.nav__el(href='/user/account')
        img.nav__user-img(src=`/img/users/${user.photo}` alt=`${user.name}`)
        span= user.name.split(' ')[0]
    else
      a.nav__el(href='/user/login') Log in
      a.nav__el.nav__el--cta(href='/user/signup') Sign Up

 





 